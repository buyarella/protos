root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
keep_existing_linebreaks = true
max_line_length = off

[*.{json, xml, yaml, yml, htm, html, js, ts, css, scss, less}]
indent_size = 2
indent_style = space

[Makefile]
indent_size = 2
indent_style = tab

[*.{*proj, resx, config, ruleset, cd, props, targets, nuspec}]
end_of_line = crlf
indent_size = 2

[*.{txt, cs, ps1, psd1, manifest}]
end_of_line = crlf

[*.{bat, cmd}]
charset = latin1
end_of_line = crlf

[*.sln]
end_of_line = crlf
indent_style = tab

[*.{md, resx, Designer.*}]
trim_trailing_whitespace = false
